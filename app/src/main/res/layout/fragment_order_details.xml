<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/loginscreen"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        app:title="Help"
        android:visibility="gone"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/help_about_us"
        android:text="@string/about_us"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"/>

    <TextView
        android:id="@+id/help_contact_us"
        android:text="@string/contact_us"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"/>

    <TextView
        android:id="@+id/help_complain"
        android:text="Complain / Suggestion"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"/>

    <TextView
        android:id="@+id/help_faq"
        android:text="FAQ"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"/>

    <TextView
        android:id="@+id/help_faq_and_terms"
        android:text="@string/faq_and_terms"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"/>
    <TextView
        android:id="@+id/help_privacy_policy"
        android:text="@string/privacy_policy"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"/>

    <TextView
        android:id="@+id/help_discliamer"
        android:text="Disclaimer"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/help_cancellation"
        android:text="Cancellation"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/help_return_refund"
        android:text="Return And Refund"
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:textColor="@color/text_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSkinBGDivider"
        android:visibility="gone"/>

</LinearLayout>