<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_weight="0.6"
            android:id="@+id/p_img"
            android:layout_width="@dimen/_80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder"
            android:layout_gravity="center"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_weight="1.7"
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/order_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="Home and Appliance"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="UW-152421661"
                android:textColor="#888888"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#888888"
                android:text="21/08/2019"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/order_price"
                android:layout_toRightOf="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#888888"
                android:layout_centerVertical="true"
                android:text="@string/Rs2"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/order_status"
                android:layout_below="@+id/order_price"
                android:layout_toRightOf="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:text="Allotted"
                android:textAlignment="center"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll"
        android:background="@color/colorSkinBGDivider"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"/>

</LinearLayout>